    Layout = "_Show.cshtml";
}

<h2>@Resources.Global.INTRODUCTION_ADD_WORK_HEADER</h2>
@{
    using (Html.BeginForm("AddWork", "Introduction", FormMethod.Post, new { model = Model }))
